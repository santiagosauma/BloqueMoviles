<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Estilo personalizado para CalendarView -->
    <style name="CustomCalendarView" parent="android:Widget.Material.CalendarView">
        <!-- Cambia el color del texto de la fecha seleccionada -->
        <item name="android:focusedMonthDateColor">#27368C</item>
        <!-- Cambia el color de la barra de selección -->
        <item name="android:selectedDateVerticalBar">@android:color/holo_blue_dark</item>
        <!-- Personaliza la apariencia del texto de las fechas -->
        <item name="android:dateTextAppearance">@style/CustomDateTextAppearance</item>
    </style>

    <!-- Apariencia personalizada del texto de las fechas -->
    <style name="CustomDateTextAppearance" parent="android:TextAppearance.Material.Body1">
        <item name="android:textColor">#27368C</item> <!-- Cambia el color del texto -->
        <item name="android:textSize">18sp</item> <!-- Cambia el tamaño del texto -->
    </style>
</resources>
